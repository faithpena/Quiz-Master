<h1>Make new question</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@question) do |f| %>
      <%= f.label :content %>
      <%= f.text_area :content, :cols => "10", :rows => "7" %>

      <%= f.label :answer %>
      <%= f.text_area :answer, :cols => "10", :rows => "3" %>

      <%= f.submit "Create question", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>