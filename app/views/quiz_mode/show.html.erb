<!-- Answer Quiz -->

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <% flash.each do |message_type, message| %>
	  <script>alert("<%= message %>")</script>
	  <% flash.clear %>
   <% end %>

   <%= form_for(@answer, url: check_quiz_path) do %>
      <%= @answer.content %>
      <%= text_field_tag :answer %>
      <%= hidden_field_tag "id", @answer.id %>
      <%= submit_tag "Answer question" %>
   <% end %>

   <div id="score">
	  Score: <%= score %>
   </div>

  </div>
</div>